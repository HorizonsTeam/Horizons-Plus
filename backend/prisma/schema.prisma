generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  phone         String?   @unique
  accounts      Account[]
  panier        panier[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model panier {
  panier_id   Int           @id @default(autoincrement())
  user_id     String?
  session_id  String?
  cree_le     DateTime      @db.Timestamp(6)
  expire_le   DateTime      @db.Timestamp(6)
  statut      String        @db.VarChar(20)
  user        User?         @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "panier_user_id_key")
  panier_item panier_item[]
  passager    passager[]

  @@index([expire_le], map: "idx_panier_expire_le")
}

model panier_item {
  panier_item_id Int            @id @default(autoincrement())
  panier_id      Int
  passager_id    Int
  depart_heure   DateTime       @db.Time(6)
  depart_lieu    String         @db.VarChar(255)
  arrivee_heure  DateTime       @db.Time(6)
  arrivee_lieu   String         @db.VarChar(255)
  classe         String         @db.VarChar(20)
  siege_restant  String?        @db.VarChar(10)
  prix           Decimal        @db.Decimal(10, 2)
  ajoute_le      DateTime       @default(now()) @db.Timestamp(6)
  date_voyage    DateTime?      @db.Date
  transport_type transport_type @default(TRAIN)
  panier         panier         @relation(fields: [panier_id], references: [panier_id], onDelete: Cascade, onUpdate: NoAction, map: "panier_item_panier_fk")
  passager       passager       @relation(fields: [passager_id], references: [passager_id], onDelete: NoAction, onUpdate: NoAction)

  @@index([panier_id], map: "idx_panier_item_panier_id")
}

model passager {
  passager_id    Int           @id @default(autoincrement())
  nom            String        @db.VarChar
  date_naissance DateTime?     @db.Date
  email          String?       @db.VarChar
  telephone      String?       @db.VarChar(15)
  panier_id      Int?
  user_id        String?
  panier_item    panier_item[]
  panier         panier?       @relation(fields: [panier_id], references: [panier_id], onDelete: NoAction, onUpdate: NoAction, map: "passager_panier_fk")
}

model promo_code {
  promo_code_id   String   @id @db.VarChar(50)
  actif           Boolean? @default(true)
  reduction_type  String?  @default("%") @db.VarChar(10)
  reduction_value Decimal  @db.Decimal(5, 2)
  conditions      Json?    @default("{}")
}

enum transport_type {
  TRAIN
  AVION
}
